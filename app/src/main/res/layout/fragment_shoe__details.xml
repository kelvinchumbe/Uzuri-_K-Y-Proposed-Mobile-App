<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shoe_Details"
    android:layout_gravity="center">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="18sp"
                android:textColor="#1E1F28"
                android:textAlignment="center"
                android:fontFamily="@font/raleway_semibold"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_local_mall_black_24dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scrollbars="none">

            <!-- TODO: Implement a carousel or horizontal scroll -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gaga"
                    android:scaleType="centerCrop"
                    android:id="@+id/gaga1"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Gaga"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="#1E1F28"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="$30.00"
                    android:fontFamily="@font/raleway_semibold"
                    android:textColor="#1E1F28"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1E1F28"
                android:text="Female Sandals"
                android:fontFamily="@font/raleway_regular"
                android:textSize="12sp"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:textColor="#1E1F28"
                android:textSize="12sp"
                android:fontFamily="@font/raleway_regular"
                android:text="Every pair is made of: Upper part of man made leather or canvas, Metal buckles and statement metal logo and Out-sole of recycled Tyre. \n\n An authentic concept by designers with a simple touch wearable every day." />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:padding="12dp"
                    android:background="@drawable/favourite_circle"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text="Add to Bag"
                    android:textColor="#ffffff"
                    android:drawableRight="@drawable/ic_local_mall_black_24dp"
                    android:background="@drawable/cart_button"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>