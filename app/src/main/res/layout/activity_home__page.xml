<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Page_"
    android:layout_gravity="center"
    android:background="#1E1F28">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/uzuri_banner"
                android:scaleType="centerCrop"
                android:id="@+id/banner_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women"
                android:textColor="#ffffff"
                android:textSize="38sp"
                android:textStyle="bold"
                android:layout_alignLeft="@id/banner_image"
                android:layout_alignBottom="@id/banner_image"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Uzuri Trends"
                android:textColor="#ffffff"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:id="@+id/thumbnail"
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gaga"
                        android:id="@+id/image1"/>

                    <Button
                        android:id="@+id/btn"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="New"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaga"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:id="@+id/image1_name"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/image1"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/image1_rating"
                        android:layout_below="@id/image1_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$30.00"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:id="@+id/image1_price"
                        android:layout_below="@id/image1_rating"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anna" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="New"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Popular"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lila" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="210dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bella" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/imena" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/content_rectangle_rounded"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/manzi" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/signup_btn_rounded"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>